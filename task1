import logging
import sys


# Настройка логирования
logging.basicConfig(level=logging.INFO, format='%(asctime)s - %(levelname)s - %(message)s')


def check_triangle(a, b, c):
    logging.info(f"Начало проверки треугольника со сторонами a={a}, b={b}, c={c}")

    if a > b + c or b > a + c or c > a + b:
        logging.error(f"Треугольник со сторонами a={a}, b={b}, c={c} не существует")
        print('Треугольник не существует')
    else:
        logging.info(f"Треугольник со сторонами a={a}, b={b}, c={c} существует")
        if a == b == c:
            logging.info("Треугольник равносторонний")
            print('Треугольник существует')
            print('Треугольник равносторонний')
        elif a == b or b == c or a == c:
            logging.info("Треугольник равнобедренный")
            print('Треугольник существует')
            print('Треугольник равнобедренный')
        else:
            logging.info("Треугольник разносторонний")
            print('Треугольник существует')
            print('Треугольник разносторонний')


if __name__ == "__main__":
    if len(sys.argv) != 4:
        logging.error("Неверное количество аргументов. Ожидалось 3 аргумента: a, b, c")
        print("Использование: python script_name.py a b c")
    else:
        try:
            a = float(sys.argv[1])
            b = float(sys.argv[2])
            c = float(sys.argv[3])
            check_triangle(a, b, c)
        except ValueError:
            logging.error("Аргументы должны быть числами")
            print("Ошибка: все аргументы должны быть числами")
